<h2>Login</h2><br><br>

<% if @error %>
    <p><%= @error %></p>
<% end %>

<form action="/login" method=POST>
  <label for="email">Email</label>
  <input type="text" name="email"><br><br>
  <label for="password">Password</label>
  <input type="password" name="password"><br><br>

  <input type="submit" value="Login">
</form>
